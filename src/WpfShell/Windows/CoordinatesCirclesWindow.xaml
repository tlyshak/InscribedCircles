<Window x:Class="WpfShell.Windows.CoordinatesCirclesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="Координати кіл" Height="300" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <telerik:RadBusyIndicator IsBusy="{Binding IsBusy}">
            <telerik:RadGridView ItemsSource="{Binding Points}" ShowColumnSortIndexes="False" ShowGroupPanel="False" 
                             RowIndicatorVisibility="Collapsed" ColumnWidth="*"/>
        </telerik:RadBusyIndicator>
    </Grid>
</Window>
